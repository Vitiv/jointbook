<!DOCTYPE html>
<html lang="en">
<head>
    <% include parts/head.ejs %>
    <title>Creating book</title>
</head>
<body>
<header>
    <% include parts/header.ejs %>
</header>

<main role="main">
    <div class="container">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
            <h6 class="border-bottom border-gray pb-2 mb-0">Добавление книги</h6>
            <div class="pt-3">
                <form class="needs-validation" novalidate action="/" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-9 mb-6">
                            <label for="bookName">Имя книги</label>
                            <input type="text" class="form-control" id="bookName" placeholder="Book Name" value=""
                                   required name="name">
                            <div class="invalid-feedback">
                                Обязательное поле
                            </div>
                        </div>
                        <input class="form-control" type="hidden" name="authorId" value="<%= authorId %>">
                        <div class="col-md-3 mb-3">
                            <label for="cost">Cost</label>
                            <input type="number" min="0" class="form-control" id="cost" placeholder="0" required
                                   name="cost">
                            <div class="invalid-feedback">
                                Неверные данные
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="description">Описание</label>
                            <textarea class="form-control" id="description" placeholder="Описание" required
                                      name="description"></textarea>
                            <div class="invalid-feedback">
                                Обязательное поле
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="photo">Фотография</label>
                            <input type="file" accept="image/x-png,image/gif,image/jpeg" class="form-control-file"
                                   id="photo" name="image" multiple>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="file">Файл книги</label>
                            <input type="file" accept="application/pdf,application/fb2" class="form-control-file"
                                   id="file" name="file" multiple>
                        </div>
                    </div>
                    <div class="pt-3">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">
                            Добавить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<% include parts/scripts.ejs %>
</body>
</html>